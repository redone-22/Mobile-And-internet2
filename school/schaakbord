                    <h3>Opdracht schaakbord</h3>
                    <div class="Schaakbord">
<script type="text/javascript">
"use strict";
var kolom;
var rijen;
var resultaat = "";
for (rijen = 0; rijen <= 7; rijen = rijen + 1) { for (kolom = 0; kolom <= 7; kolom = kolom + 1) {
    if (kolom % 2 === 0) { if (rijen % 2 === 0) { resultaat = resultaat + "<div class='wit'></div>"; } else { resultaat = resultaat + "<div class='black'></div>"; } } else {  if (rijen % 2 === 0) { resultaat = resultaat + "<div class='black'></div>"; } else { resultaat = resultaat + "<div class='wit'></div>"; } }
} } document.write(resultaat);
</script>
                    </div>
